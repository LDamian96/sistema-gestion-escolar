# ============================================
# ESCUELA-BACKEND - Variables de Entorno (Ejemplo)
# ============================================
# Copiar este archivo a .env y ajustar valores

# Aplicación
NODE_ENV=development
PORT=4000
API_PREFIX=api/v1
FRONTEND_URL=http://localhost:3000

# Base de Datos PostgreSQL
DATABASE_URL="postgresql://usuario:password@localhost:5432/escuela_db?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=tu_password_redis

# JWT - Tokens de autenticación (CAMBIAR EN PRODUCCIÓN)
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=tu_refresh_secret_muy_seguro_aqui
JWT_REFRESH_EXPIRES_IN=7d

# Seguridad
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15
COOKIE_SECRET=tu_cookie_secret_aqui

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=60

# CORS
CORS_ORIGINS=http://localhost:3000

# Mercado Pago
MERCADOPAGO_ACCESS_TOKEN=tu_access_token
MERCADOPAGO_PUBLIC_KEY=tu_public_key
# Moneda según país: PEN=Perú, ARS=Argentina, BRL=Brasil, CLP=Chile, COP=Colombia, MXN=México, UYU=Uruguay
MERCADOPAGO_CURRENCY=PEN

# Uploads
UPLOAD_MAX_SIZE=10485760
UPLOAD_DEST=./uploads
